{
	"name": "@elsikora/nestjs-crud-automator",
	"version": "1.4.3",
	"description": "A library for automating the creation of CRUD operations in NestJS.",
	"keywords": [
		"NestJS",
		"CRUD",
		"TypeORM",
		"REST API",
		"Swagger",
		"Decorator"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ElsiKora/NestJS-Crud-Automator"
	},
	"license": "MIT",
	"author": "ElsiKora",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		}
	},
	"main": "dist/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "npm run build:types && npm run build:cjs && npm run build:esm",
		"build:cjs": "swc src -d dist/cjs --strip-leading-paths --config-file .swcrc -C module.type=commonjs",
		"build:esm": "swc src -d dist/esm --strip-leading-paths --config-file .swcrc -C module.type=es6",
		"build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist/types",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint ./src && prettier --check .",
		"lint:fix": "eslint ./src --fix && prettier --write .",
		"patch": "changeset",
		"prebuild": "rm -rf dist/*",
		"release": "npm install && npm run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.9",
		"@elsikora/eslint-config": "^3.1.4",
		"@elsikora/eslint-plugin-nestjs-typed": "^2.0.4",
		"@eslint-react/eslint-plugin": "^1.15.2",
		"@eslint/compat": "^1.2.2",
		"@eslint/js": "^9.14.0",
		"@nestjs/passport": "^10.0.3",
		"@stylistic/eslint-plugin": "^2.10.1",
		"@swc/cli": "^0.5.0",
		"@swc/core": "^1.9.1",
		"@types/eslint__js": "^8.42.3",
		"@types/lodash": "^4.17.13",
		"@types/node": "^22.8.2",
		"@typescript-eslint/eslint-plugin": "^8.13.0",
		"@typescript-eslint/parser": "^8.13.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-check-file": "^2.8.0",
		"eslint-plugin-jsonc": "^2.16.0",
		"eslint-plugin-n": "^17.12.0",
		"eslint-plugin-ng-module-sort": "^1.3.1",
		"eslint-plugin-package-json": "^0.15.5",
		"eslint-plugin-perfectionist": "^3.9.1",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-regexp": "^2.6.0",
		"eslint-plugin-sonarjs": "^2.0.4",
		"eslint-plugin-tailwindcss": "^3.17.5",
		"eslint-plugin-typeorm-typescript": "^0.4.0",
		"eslint-plugin-unicorn": "^56.0.0",
		"eslint-plugin-yml": "^1.15.0",
		"prettier": "^3.3.3",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.13.0"
	},
	"peerDependencies": {
		"@nestjs/common": ">=10.4.6",
		"@nestjs/core": ">=10.4.6",
		"@nestjs/platform-fastify": ">=10.4.6",
		"@nestjs/swagger": ">=8.0.0",
		"@nestjs/throttler": ">=6.2.1",
		"class-transformer": ">=0.5.1",
		"class-validator": ">=0.14.1",
		"fastify": ">=5.0.0",
		"lodash": ">=4.17.21",
		"typeorm": ">=0.3.20"
	},
	"publishConfig": {
		"access": "public"
	}
}
